@using CoreAndFood.Models
@model List<Admin>

@{
}


<div class="container-fluid">

    <br />


    <h3>Kullanıcı Listesi</h3>

    <br>
    <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#exampleModal" class="btn btn-success">Ekle</button>
   
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Kullanıcı Ekle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/User/AddUser/" method="post">
         <div class="modal-body">
        <div class="mt-1">
            <label>Kullanıcı Adı</label>
            <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı adını yazınız..." required >
        </div>

        <div class="mt-3">
            <label>Şifre</label>
            <input type="text" class="form-control" name="UserPassword" placeholder="Şifrenizi yazınız..." required >
        </div>

        <div class="mt-3">
            <label>Yetkisi</label>
            <select name="Role" class="form-control" required>
                <option >Seçiniz</option>
                <option value="A">Yönetici</option>
                <option value="B">Kullanıcı</option>
            </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-success">Ekle</button>
      </div>
        
      </form>
     
    </div>
  </div>
</div>

   <br>
   <br>

    <table class="table table-striped">
        <thead>

            <tr>
                <th>#</th>
                <th>Kullanıcı Adı</th>
                <th>Yetkisi</th>
                <th></th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @{ int a = 1;}
            @foreach (var i in Model)
            {
            <tr>
                <th>@a</th>
                <td>@i.UserName</td>
                <td>
                    @{
                        if (@i.Role=="A")
                        {
                            <span>Yönetici</span>
                        }
                        else{
                            <span>Kullanıcı</span>
                        }
                    }
                    
                </td>

                <td>
                    <a href="/User/DeleteUser/@i.AdminId" class="btn btn-danger">Sil</a>
                </td>

                <td>
                    <a href="/User/GetUser/@i.AdminId" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>

                a++;
            }

        </tbody>
    </table>
 

</div>