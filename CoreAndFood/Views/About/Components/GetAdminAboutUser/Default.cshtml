@using CoreAndFood.Models
@model List<AboutUser>

<br>
<!-- Default box -->
<div class="card">
<div class="card-header">
    <h3 class="card-title">Çalışanlarımız</h3>

    <div class="card-tools">
    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
        <i class="fas fa-minus"></i>
    </button>
    </div>
</div>
<div class="card-body p-0">

    <br>
    <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#exampleModal1" class="btn btn-success">Ekle</button>
    <br>

    <table class="table table-striped projects">
        <thead>
            <tr>
                <th>#</th>
                <th>Fotoğraf</th>
                <th>Çalışan Adı</th>
                <th>Departmanı</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        @{int a =1;}
        @foreach (var i in Model)
        {
            <tr>
               
               <th>@a</th>
                <td>
                    <img src="@i.AboutUserPictureUrl" width="100" alt="">
                </td>
                <td>@i.AboutUserName</td>
                <td>@i.AboutUserJob</td>
                <td>
                    <a href="/About/DeleteAboutUser/@i.AboutUserId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/About/GetAboutUser/@i.AboutUserId" class="btn btn-warning">Güncelle</a>
                </td>
            </tr> 

            a++;
        }
       


        </tbody>
    </table>
</div>
<!-- /.card-body -->
</div>
<!-- /.card -->



<!-- Modal -->
<div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Çalışan Ekle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/About/AddAboutUser/" method="post">
         <div class="modal-body">
        <div class="mt-1">
            <label>Fotoğraf Url</label>
            <input type="text" class="form-control" name="AboutUserPictureUrl" placeholder="Fotoğraf url'i yazınız..." required >
        </div>

        <div class="mt-3">
            <label>Çalışan Adı</label>
            <input type="text" class="form-control" name="AboutUserName" placeholder="Çalışan adınız yazınız..." required >
        </div>

        <div class="mt-3">
            <label>Departmanı</label>
            <input type="text" class="form-control" name="AboutUserJob" placeholder="Departmanını yazınız..." required >
        </div>

        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-success">Ekle</button>
      </div>
        
      </form>
     
    </div>
  </div>
</div>

