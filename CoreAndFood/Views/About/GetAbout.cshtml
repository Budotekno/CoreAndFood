@model CoreAndFood.Models.About

<div class="container-fluid">

<br />


<h3>Hakkımızda Güncelle</h3>

<form action="/About/UpdateAbout/" method="post">

          
    <input hidden name="AboutId" value="@Html.ValueFor(x=>x.AboutId)" class="form-control" />

    <div class="mt-3">
        <label>Fotoğraf Url </label>
        <input type="text" name="AboutPicture" required value="@Html.ValueFor(x=>x.AboutPicture)" class="form-control" />
    </div>

        <div class="mt-3">
        <label>Yazı </label>
        <textarea  name="AboutCommet" rows="18" required class="form-control">@Html.ValueFor(x=>x.AboutCommet)</textarea>
    </div>

    <div class="mt-3">
        <a href="/About/Index" type="button"  class="btn btn-danger">İptal</a>
        <button type="submit"  class="btn btn-warning">Güncelle</button>
    </div>

</form>

</div>

<br>