@using CoreAndFood.Models
@model List<About>
@{
    ViewData["Title"] = "Index";
}

<br>
<!-- Default box -->
<div class="card">
<div class="card-header">
    <h3 class="card-title">Hakkımızda</h3>

    <div class="card-tools">
    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
        <i class="fas fa-minus"></i>
    </button>
    </div>
</div>
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th>Fotoğraf</th>
                <th>Yazı</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        @foreach (var i in Model)
        {
            <tr>
                <td>
                    <img src="@i.AboutPicture" width="150">
                </td>
                <td style="text-align:justify;">@i.AboutCommet</td>
                <td>
                    <a href="/About/GetAbout/@i.AboutId" class="btn btn-warning">Güncelle</a>
                </td>
            </tr> 
        }
       


        </tbody>
    </table>
</div>
<!-- /.card-body -->
</div>
<!-- /.card -->

@await Component.InvokeAsync("GetAdminAboutList")

@await Component.InvokeAsync("GetAdminAboutUser")

@await Component.InvokeAsync("GetAdminAboutYorum")


