@using CoreAndFood.Models
@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container-fluid">

    <br />


    <h3>İletişim</h3>

    @foreach (var i in Model)
    {
        <div>
            <div class="mt-3">
                <label>Adres</label>
                <input type="text" disabled value="@i.ContactAdress" class="form-control" />
            </div>

            <div class="mt-3">
                <label>Mail</label>
                <input type="text" value="@i.ContactMail" disabled class="form-control" />
            </div>

            <div class="mt-3">
                <label>Telefon</label>
                <input type="text" value="@i.ContactPhone" disabled class="form-control" />
            </div>

            <div class="mt-3">
                <label>Harita</label>
                <textarea disabled class="form-control"
                          rows="4 ">@i.ContactMaps</textarea>
            </div>

            <div class="mt-3">
                <a href="/Contact1/GetContact/@i.ContactId"  class="btn btn-warning">Güncelle</a>


            </div>
        </div>


    }










</div>