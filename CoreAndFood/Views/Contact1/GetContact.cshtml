@{
}



<div class="container-fluid">

    <br />


    <h3>İletişim Güncelle</h3>

    <form action="/Contact1/UpdateContact/" method="post">
        <div>

            <input hidden type="text" name="ContactId"  value="@Html.ValueFor(x=>x.ContactId)" />


            <div class="mt-3">
                <label>Adres</label>
                <input type="text" value="@Html.ValueFor(x=>x.ContactAdress)" name="ContactAdress" class="form-control" />
            </div>

            <div class="mt-3">
                <label>Mail</label>
                <input type="text" value="@Html.ValueFor(x=>x.ContactMail)" name="ContactMail" class="form-control" />
            </div>

            <div class="mt-3">
                <label>Telefon</label>
                <input type="text" value="@Html.ValueFor(x=>x.ContactPhone)" name="ContactPhone" class="form-control" />
            </div>

            <div class="mt-3">
                <label>Harita</label>
                <textarea class="form-control"
                          rows="4 " name="ContactMaps">@Html.ValueFor(x => x.ContactMaps)</textarea>
            </div>

            <div class="mt-3">
                <input type="submit" value="Güncelle" class="btn btn-warning" />
            </div>
        </div>


    </form>

    





</div>